# change window focus

# change window focus within space
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

#change focus between external displays (left and right)
alt - s: yabai -m display --focus west
alt - g: yabai -m display --focus east


# Moving windows
alt + shift - h : yabai -m window --warp west
alt + shift - l : yabai -m window --warp east
alt + shift - j : yabai -m window --warp south
alt + shift - k : yabai -m window --warp north

# Rotate layout
alt + shift - r : yabai -m space --rotate 270

# Balance the layout
alt + shift - b : yabai -m space --balance

# max a window
alt + shift - m : yabai -m window --toggle zoom-fullscreen


# Move focus container to display (use "space" instead of display to move to just per space instead)
#alt + shift - x : yabai -m window --display 1 --focus
#alt + shift - z : yabai -m window --display 2 --focus
#ctrl + shift - c : yabai -m window --display 3 --focus

# Move focus container to space
shift + alt - 1 : yabai -m window --space 1 --focus # main
shift + alt - 2 : yabai -m window --space 2 --focus # web
shift + alt - 3 : yabai -m window --space 3 --focus # chat
shift + alt - 4 : yabai -m window --space 4 --focus # music
shift + alt - 5 : yabai -m window --space 5 --focus # editors
shift + alt - 6 : yabai -m window --space 6 --focus # immersion
shift + alt - 7 : yabai -m window --space 7 --focus # anki
shift + alt - 8 : yabai -m window --space 8 --focus # terminal
shift + alt - 9 : yabai -m window --space 9 --focus # space 9

# Resize windows
alt - a : yabai -m window --resize left:-100:0 ; yabai -m window --resize right:-100:0
alt - s : yabai -m window --resize bottom:0:100 ; yabai -m window --resize top:0:100
alt - w : yabai -m window --resize top:0:-100 ; yabai -m window --resize bottom:0:-100
alt - d : yabai -m window --resize right:100:0 ; yabai -m window --resize left:100:0


# Float / Unfloat window
shift + alt - t : yabai -m window --toggle float

